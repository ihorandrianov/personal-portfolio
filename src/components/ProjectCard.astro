---
interface Props {
  title: string;
  img: string;
  description: string;
  link: string;
}

const { title, img, description, link } = Astro.props;
---

<article
  class="flex flex-col xl:flex-row border-textCol/20 border rounded-md shadow-lg mb-10"
>
  <div class="xl:h-[300px] xl:w-2/3 xl:overflow-hidden rounded-md">
    <img src={img} alt="project image" height="300px" width="1200px" />
  </div>
  <div class="xl:w-1/3 flex flex-col gap-5 p-3">
    <h1 class="text-2xl font-bold tracking-wide">{title}</h1>
    <p>{description}</p>
    <a
      class="text-blue-500 hover:text-blue-300 transition-colors duration-300"
      href={link}
    >
      View project
    </a>
  </div>
</article>
